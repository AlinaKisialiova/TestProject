<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/security"
             xmlns:beans="http://www.springframework.org/schema/beans"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://www.springframework.org/schema/beans
                    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                    http://www.springframework.org/schema/security
                    http://www.springframework.org/schema/security/spring-security-3.1.xsd">

    <http pattern="/css/**" security="none"/>

    <http auto-config="true" use-expressions="true">

        <intercept-url pattern="/informationBoard/**" access="hasAnyRole('ROLE_LECTOR', 'ROLE_USER')"/>
        <intercept-url pattern="/registrationCourse/**" access="hasAnyRole('ROLE_LECTOR')"/>
        <intercept-url pattern="/editCourse/**" access="hasRole('ROLE_LECTOR')"/>
        <intercept-url pattern="/courseDetails/**" access="hasAnyRole('ROLE_LECTOR', 'ROLE_USER')"/>
        <intercept-url pattern="/participantsList/**" access="hasAnyRole('ROLE_LECTOR', 'ROLE_USER')"/>
        <intercept-url pattern="/mySeminars/**" access="hasAnyRole('ROLE_LECTOR', 'ROLE_USER')"/>
        <intercept-url pattern="/evaluationReminder/**" access="hasAnyRole('ROLE_LECTOR', 'ROLE_USER')"/>

        <form-login login-page="/signin"
                    authentication-failure-url="/signin-failure" default-target-url="/informationBoard"/>
        <logout logout-success-url="/signin"/>

        <access-denied-handler error-page="/deniedPage"/>


    </http>

    <authentication-manager>
        <authentication-provider user-service-ref="customUserDetailsService">
        </authentication-provider>
    </authentication-manager>


</beans:beans>